{
  "name": "containerization",
  "version": "1.0.0",
  "description": "Project to demostrate Docker and Kubernetes using nodeJS application",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node index.js",
    "dbuild": "docker build .",
    "drun": "docker run -p 80:3000",
    "dev-build": "docker build -t dev-image:dev .",
    "dev-run": "docker run --rm -d --name dev-container dev-image:dev",
    "cont-stop": "docker stop dev-container",
    "cont-start": "docker start dev-container",
    "build-run": "npm run dev-build && npm run dev-run",
    "dev-run-volu": "docker run --rm -d --name dev-container -v /app/temp -v named:/app/temp2 -v 'C:/user/containerization':/app /dev-image:dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/supreethkm/containerization.git"
  },
  "keywords": [
    "Docker",
    "Kubernetes",
    "Nodejs"
  ],
  "author": "@supreeth",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/supreethkm/containerization/issues"
  },
  "homepage": "https://github.com/supreethkm/containerization#readme",
  "dependencies": {
    "express": "^5.2.1"
  }
}
